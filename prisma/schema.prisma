model Folder {
  id        Int      @id @default(autoincrement())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  posts     Post[]

}

model Post {
  id        Int      @id @default(autoincrement())
  name      String
  url       String
  createdAt DateTime @default(now())
  tags      Tag[]    @relation("_PostsOnTags")
  folder_id Int
  folders   Folder   @relation(fields: [folder_id], references: [id])
}

model Tag {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  createdAt DateTime @default(now())
  posts     Post[]   @relation("_PostsOnTags")

}

